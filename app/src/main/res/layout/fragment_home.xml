<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:paddingTop="20dp">

    <!-- TODO: Update blank fragment layout -->

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:prompt="@string/my_pet_prompt"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_skin_diagnosis"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_gravity="center|left"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:text="@string/skin_diagnosis"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_eye_diagnosis"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_gravity="center|right"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:text="@string/eye_diagnosis"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerBtn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"

            android:text="@string/back_text"
            android:textColorHighlight="@color/white"
            android:textColorLink="#FDFAFA"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addPetTitle"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="Pet Check LiST"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>