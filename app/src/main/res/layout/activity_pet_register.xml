<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PetRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notEqualPWText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="반려동물 정보"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=" 본 화면은 반려동물에 대한 정보를 입력하는 화면입니다."
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="60dp" >

        <EditText
            android:id="@+id/pwEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="  이름"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:background="@drawable/edittext_rectangle" />

        <EditText
            android:id="@+id/pwEdit2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:hint="  생년월일(yyyy-mm-dd)"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_rectangle" />

        <EditText
            android:id="@+id/hospitalNameEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="  성별"
            android:inputType="text"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_rectangle" />

        <EditText
            android:id="@+id/hospitalCodeEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="  종"
            android:inputType="text"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_rectangle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="동물 추가" />
    </LinearLayout>


</LinearLayout>